{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ui/*": [
        "./src/*"
      ],
    },
    "outDir": "./dist",
    "jsx": "react",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}